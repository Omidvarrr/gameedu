                  <RadioButton fx:id="educationalAssistantRadioButton" mnemonicParsing="false" onAction="#changeEducationalAssistant" text="دستیار آموزشی" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="updateButton" mnemonicParsing="false" onAction="#update" prefHeight="26.0" prefWidth="154.0" text="به‌روز‌رسانی" />

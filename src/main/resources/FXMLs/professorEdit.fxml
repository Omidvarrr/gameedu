            <Insets bottom="10.0" top="10.0" />
         </padding>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="70.0">
               <children>
                  <TextField fx:id="emailTextField" />
                  <Label fx:id="label" text="ایمیل" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="70.0">
               <children>
                  <TextField fx:id="phoneNumberTextField" />
